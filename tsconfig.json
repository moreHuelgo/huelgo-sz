{
  "compilerOptions": {
    "lib": ["es6", "ES7", "ES2017", "ES2018.intl", "ESNEXT.intl", "esnext.asynciterable", "DOM", "ES2020"],
    "target": "es6",
    "module": "commonjs",
    "outDir": "lib",
    "declaration": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "compileOnSave": true
}
